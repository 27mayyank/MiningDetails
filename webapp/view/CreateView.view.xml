<mvc:View controllerName="app.mayank55.controller.CreateView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form">
    <Page id="idCreate" title="{i18n>Createtitle}" showNavButton="true" navButtonPress="onPressButton">
        <f:SimpleForm editable="true" >
            <Label text="{i18n>LocationId}" required="true"></Label>
            <Input id="id1" placeholder="EX: LOC001"></Input>
            <Label text="{i18n>LocationDescription}" required="true"></Label>
            <Input id="id2"></Input>
            <Label text="{i18n>MiningResourceAllocated}" required="true"></Label>
            <Input id="id3"></Input>
            <Label text="{i18n>TotalCost}" ></Label>
            <Input id="id4" ></Input>
            <Label text="{i18n>ReportOfPossibleMineral}"></Label>
            <Input id="id5"></Input>
            <Label text="{i18n>NumberOfDrills}" ></Label>
            <Input id="id6"></Input>
            <Label text="{i18n>TypeOfMineral}" ></Label>
            <Input id="id7" ></Input>
            <Button text="{i18n>submit}" press="onSubmit" width="250px" type="Accept" icon="sap-icon://create"></Button>
 
        </f:SimpleForm>
    </Page>
</mvc:View>
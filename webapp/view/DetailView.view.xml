<mvc:View controllerName="app.mayank55.controller.DetailView"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:comp="sap.ui.comp.filterbar">
    <Page id="idDetail" title="Detail View" showNavButton="true" navButtonPress="onListView">
        <content>
            <f:SimpleForm>
                <Label text="Location Id"></Label>
                                <Text text="{MiningDataSet>LocationId}"></Text>
                                <Label text="Location Description"></Label>
                                <Text text="{MiningDataSet>LocationDescription}"></Text>
                                <Label text="Mining Resource Allocated (Man Power)"></Label>
                                <Text text="{MiningDataSet>MiningResourceAllocated}"></Text>
                                <Label text="Total Cost (IN USD)"></Label>
                                <Text text="{MiningDataSet>TotalCost}"></Text>
                                <Label text="Report Of Possible Mineral"></Label>
                                <Text text="{MiningDataSet>ReportOfPossibleMineral}"></Text>
                                 <Label text="Type Of Mineral"></Label>
                                <Text text="{MiningDataSet>TypeOfMineral}"></Text>
                                <Label text="Number Of Drills"></Label>
                                <Text text="{MiningDataSet>NumberOfDrills}"></Text>
            </f:SimpleForm>
        </content>
        <footer>
			<OverflowToolbar>
				<ToolbarSpacer/>	
				<Button text="EDIT" press="onEDIT" type="Attention" icon="sap-icon://edit"  />
			</OverflowToolbar>
		</footer>
    </Page>
</mvc:View>
